{
    "name": "qvapay/sdk",
    "description": "SDK for QvaPay Gateway connections and APIs",
    "keywords": [
        "qvapay/sdk",
        "laravel",
        "sdk"
    ],
    "homepage": "https://qvapay.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Erich Garcia Cruz",
            "email": "ecruz@bachecubano.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-laravel": "^1.1",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Qvapay\\sdk\\Qvapay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qvapay\\sdk\\Qvapay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Qvapay\\sdk\\Qvapay\\QvapayServiceProvider"
            ],
            "aliases": {
                "Qvapay": "Qvapay\\sdk\\Qvapay\\QvapayFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
